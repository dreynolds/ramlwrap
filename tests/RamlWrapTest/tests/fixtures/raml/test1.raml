#%RAML 0.8
---
title: CMS External API
description: The interface between CMS and external services (AES and TMS) is defined in this RAML. Due to the encryption of the request, the same API call is used for all communication with external systems.
version:  v0.1
mediaType:  application/json
baseUri: http://{{serverName}}/

protocols: [HTTP]

baseUriParameters:
  serverName:
    description: The name of the server (so as to allow templating)

/cms:
  displayName: CMS
  description: MasterCard Credential Management System
  post:
    description: Request contains service request
    body:
        application/json:
            schema: !include json/service_request.json
            example: !include json/service_request_example.json
    responses:
        200:
            description: Encrypted service response
            body:
                application/json:
                    #schema: !include json/service_response.json
                    example: "{ 'data': 'foo' }"
        500:

/cms2:
    displayName: CMS2
    description: MasterCard Credential Management System
    post:
      description: Request contains service request
      body:
          application/json:
              schema: !include json/service_request.json
              example: !include json/service_request_example.json
      responses:
          200:
              description: Encrypted service response
              body:
                  application/json:
                      #schema: !include json/service_response.json
                      example: "{ 'data': 'foo' }"
          500:
    /foo:
        displayName: Woo
        post:
            description: do thing
        /bar:
            displayName: barbar
            post:
                description: booom

/cms3:
    displayName: CMS3
    /foo:
        displayName: Woo
        /bar:
            displayName: barbar
            post:
                description: Im a childs child!
            get:
                description: Im a childs child but you have to get me!


/turtle:
  displayName: testget
  description: Used to test GET requests on RAMLWRAP.
  get:
      description: Fetch a turtle by name
      queryParameters:
          name:
              displayName: Name
              type: string
              example: Michelangelo
              required: true
              minLength: 4
      responses:
          200:
              description: Turtle response.
              body:
                  application/json:
                      #schema: !include json/turtle_response.json
                      example: "{'name': 'Michelangelo', 'bandanaColour': 'orange', 'weapon': 'nunchucks'}"
  /quote:
      displayName: Get a quote
      get:
          description: Get a quote
          queryParameters:
              name:
                  displayName: Name
                  type: string
                  example: Michelangelo
                  required: true
                  minLength: 4
              type:
                  displayName: Quote type
                  type: string
                  example: funny
                  required: false
                  minLength: 4
          responses:
              200:
                  description: quote response
                  body:
                      application/json:
                          example: "{'quote': 'Ninja-kick the damn rabbit! Do something!'}"
